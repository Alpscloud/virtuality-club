.menu
	display flex
	flex-wrap nowrap
	align-items stretch
	overflow-x hidden
	
	&-aside
		width 385px
		background-color $menu-aside-bg
		min-height 100vh
		overflow hidden
		position relative
		font 22px $MBold
		padding 165px 20px 40px 130px
		will-change transform
		transition all .23s ease-in-out
		transform translateX(-105%)
		opacity 0
		
		&__content
			position relative
			z-index 2
		
		&__title
			text-transform uppercase
			color $accent-color
			
			margin-bottom 60px
		
		.decor-circles
			position absolute
			left -140px
			top 180px
			
		&__list
			li
				display block
				margin-bottom 20px
				&:last-child
					margin-bottom 0
					
			a
				color $accent-color
				opacity 0.5
				text-transform uppercase
				&:hover,
				&.is-active
					opacity 1
					
	&-content
		flex 1
		padding 250px 130px 40px 95px
		.btn-close
			position absolute	
			top 165px
			right 130px
	&-categories
		> ul
			display flex
			flex-wrap wrap
			justify-content flex-start
			margin-left -40px
			margin-right -40px
			
			li
				width calc(100% / 6)
				padding-left 40px
				padding-right 40px
				margin-bottom 55px
				&.has-sublist
					> a
						color $secondary-color
						border-bottom 1px solid
						&:hover
							color $accent-color
						
				ul
					margin-top 24px
					li
						width 100%
						padding 0
						margin-bottom 22px
						&:last-child
							margin-bottom 0
							
					a
						color $menu-cat-link-color
						font-size 14px
						line-height 17px
						&:hover
							color $accent-color
				
			a
				text-transform uppercase
				color $accent-color
				font 16px $Bold
				line-height 19px
				span
					display block
					margin-bottom 7px
				img
					display block
					width 110px
					height 80px
					object-fit cover
					opacity .4
					transition opacity .17s ease-in-out
				&:hover
					img
						opacity 1
						

		
	&-wrapper
		position fixed
		top 0
		left 0
		width 100%
		height 100vh
		overflow-x hidden
		overflow-y auto
		z-index 29
		background-color $menu-bg
		transition all .23s ease-in-out
		opacity 0
		visibility hidden
		pointer-events none
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
			.menu-aside
				transform translateX(0)
				opacity 1
				

.menu-main__list
	margin-bottom 50px
	li
		display block
		position relative
		margin-bottom 25px
		&:last-child
			margin-bottom 0
			
		
		

			
	a
		text-transform uppercase
		color #F4F2F5
		font 18px $MBold
		&:hover,
		&.is-active
			color $accent-color

.menu-item-divider
	&:before
		pseudo()
		position absolute
		vertical-center()
		right 100%
		margin-right 10px
		height 2px
		background-color $accent-color
		width 90px
		
	&__md
		&:before
			width 60px
	&__sm
		&:before
			width 30px