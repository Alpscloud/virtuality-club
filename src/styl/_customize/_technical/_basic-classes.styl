.disable-hover,
.disable-hover * 
	pointer-events none !important

.gutters
	padding $gutters
	
.gutter
	&-top
		padding-top $gutter-top
	&-bottom
		padding-bottom $gutter-bottom
		&-sm
			padding-bottom $gutter-bottom-sm
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%

.sect-title
	font 2em $Bold
	margin-bottom 40px
	
.title
	font-family $MBold
	&-h1-size
		font-size 36px
		line-height 38px
	&-h2-size
		font-size 44px
		line-height 50px
		margin-bottom 40px
	&-h3-size
		font-size 26px
		line-height 31px
		font-family $Bold
		
	&-decor
		position relative
		z-index 1
		&:before
			pseudo()
			position absolute
			right 0
			top 100%
			margin-top -60px
			z-index -1
			width 124px
			height 124px
			background url('../img/decor/title-decor.svg') 50% no-repeat / contain
			border-radius 50%
			will-change transform
			animation rotate-z 10s linear infinite forwards
		
.sect-subtitle
	font 20px $Reg
	line-height 24px
	
.sect-gutter-top
	padding-top 75px
		
.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.light-text-color
	color $light-text-color
	
.dark-text-color
	color $dark-text-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.color-bg
	background-color $color-bg
	
.gradient-bg
	background radial-gradient(35.22% 79.78% at 50% 50%, #022140 0%, #05091D 100%)
	color $light-accent-color
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden
	
.thumbnail
	position relative
	overflow hidden
	width 100%
	padding-top 50%
	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover
	




.hidden-desktop
	display none
	
.b-radius-5
	border-radius 5px