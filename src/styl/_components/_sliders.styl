// FAqs
.faq-slider
	.slick-slide
		padding 15px
		
.faq-slide
	width 160px !important
	
		
	&__content
		height 200px
		border-radius 5px
		text-align center
		color $light-accent-color
		font 18px $Bold
		line-height 21px
		margin 0 auto
		padding 10px
		position relative
		display flex !important
		align-items flex-end
		justify-content center
		transition transform .17s ease-in-out
		p, h3
			position relative
			z-index 1
		&:hover
