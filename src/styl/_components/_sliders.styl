.slider
	position relative
	padding-left 95px
	padding-right 95px
	.btn-arrow
		position absolute
		vertical-center()
		z-index 1
		&__prev
			left 0
		&__next
			right 0
			

	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
			
.slick-slide .slick-slide
	padding 0 !important
			
.swiper-container
	*
		box-sizing border-box
		
.slider-controls
	white-space nowrap
	font-size 0
	width 160px
	display flex
	justify-content space-between
	flex-wrap nowrap
	height 65px
	
	.btn-arrow
		width 65px
		height 	65px
		svg
			width 12px
			height 20px
		
// Includes slider
.includes-slider
	position relative
	z-index 2
	min-width 0
	padding-left 30px
	padding-bottom 100px
	height 100%
	
	width 100%
	&__wrapper
		position relative
		flex 1
		margin-right -130px
		height 100%
		
		.slick-list,
		.slick-track,
		.slick-slide
			height 100%
			> div
				height 100%
	
		.slider-controls
			position absolute	
			left 30px
			bottom 65px
			z-index 2
		
	&:before
		pseudo()
		position absolute
		bottom 0
		left 0
		height 235px
		width 100%
		background-color $color-bg
		border-radius 20px 20px 0 0
	.slick-slide
		//width 320px
		width 450px
		margin-right 30px
		padding-top 80px
	.slick-current
		.include-slide
			transform translateY(-50px)
			&__img
				&:before,
				p
					opacity 1
					
	
		
.include-slide
	will-change transform
	transition transform .23s ease-in-out
	margin 0 auto
	height 100%
	display flex !important
	flex-direction column
	&__title
		font 20px $MBold
		line-height 21px
	&__img
		border-radius 5px
		margin-bottom 15px
		//padding-top 138%
		padding-top 0
		flex 1
		&:before
			pseudo()
			fullSize()
			position absolute
			transition opacity .17s ease-in-out
			background-color rgba($secondary-color, .7)
			z-index 1
			opacity 0
		p
			position absolute
			fullSize()
			padding 45px 15px
			color $alternate-light-text-color
			z-index 2
			font 24px $MReg
			line-height 46px
			transition opacity .17s ease-in-out
			opacity 0
			flex-col-center()
			
// top games
.top-games-slider
	height 100%
	
	.slick-track, .slick-list
		height 100%
		
	.slick-slide
		> div
			height 100%
	
	&__wrapper
		position relative
		margin-top 55px
		margin-left -130px
		margin-right -130px
		flex 1
		
		.btn-arrow
			position absolute
			vertical-center()
			z-index 2
			&__prev
				left 120px
			&__next
				right 120px
	
	.slick-slide
		height auto
		width 1070px
		padding-left 75px
		padding-right 75px

				
		&:not(.slick-center),
		&:not(.slick-current)
			.top-game
				opacity .4
				pointer-events none
				
		&.slick-current,
		&.slick-center
			.top-game
				opacity 1
				pointer-events auto
				
	.slick-track
		flex-wrap nowrap
		display flex
		
		.slick-slide
			float none
			display block !important
		
	
		
	
.top-game
	border 1px solid $accent-color
	border-radius 10px
	padding 15px
	height 100%
	color $secondary-color
	min-height 540px
	position relative
	transition opacity .3s ease-in-out
	display flex
	flex-direction column
	&__inner
		background-color $color-bg
		border-radius 10px
		overflow hidden
		display flex
		flex-wrap nowrap
		height 100%
		flex 1
		
	
		
	&__poster
		width 57.3%
		position relative
		display block
		img
			display block
			position absolute
			position-center()
			width 100%
			height 100%
			object-fit cover
			
		&.has-trailer
			&:before
				z-index 1
				pseudo()
				position absolute
				position-center()
				width 69px
				height 69px
				background url('../img/icons/svg/play-blue.svg') 50% no-repeat / contain
		
	&__content
		width 42.7%
		padding 25px 20px
		
	
		

				
	&__btn
		display flex
		flex-wrap nowrap
		justify-content space-between
		align-items center
		
	
		
	
				
	.permalink
		margin-bottom 38px
		
	&__details
		
		.permalink
			margin-bottom 20px

		&--btn
			position relative
			
			.game__age
				position absolute
				vertical-center()
				right 0
		
		.game-params
			margin-bottom 27px
			
		.game-param
			margin-right 50px
		
		
		
		.btn-close-simple
			position absolute
			top 20px
			right 20px
			
// Catalog

.catalog-games__slider
	height 100%
	.slick-slide
		padding 22.5px
		display flex !important
		justify-content center
		flex-direction column
		align-items center
		
		> div
			height 50%
			&:first-child
				margin-bottom 25px
			
	
		
			
	.slick-track,
	.slick-list
		height 100%
	

		
.catalog-slider
	height 100%

	


.catalog-game-card
	//width 190px
	transition transform .2s ease-in-out
	backface-visibility hidden
	//will-change transform
	display flex
	flex-direction column
	
	&:hover
		cursor pointer
		transform scale(1.05, 1.05)
	&__thumbnail
		border-radius 5px
		display block
		overflow hidden
		//padding-top 142%
		margin-bottom 13px
		padding-top 0
		flex 1
		width 270px
		img
			position relative
			transform none
			width 100%
			height auto
			top auto
			left auto
		&:before
			pseudo()
			position absolute
			height 75px
			background linear-gradient(180deg, rgba(3, 37, 90, 0) 0%, rgba(3, 37, 90, 0.6) 45.76%, rgba(3, 37, 90, 0.8) 100%)
			bottom 0
			width 100%
			z-index 1
		
	&__title
		font 18px $MBold
		line-height 19px
		color $secondary-color
		text-align center
		flex none
	&__params
		position absolute
		bottom 10px
		padding-left 10px
		padding-right 10px
		z-index 3
		display flex
		justify-content space-between
		align-items center
		width 100%
		

	.game__age
		color $alternate-light-text-color
		width 34px
		height 34px
		font-size 14px
		
	.game-param
		color $alternate-light-text-color
		font-size 15px
		
	&__details
		.game-params
			margin-bottom 0
			align-items center
			
		.game-param
			margin-right 40px
			&:last-child
				margin-right 0
				
	&__gallery
		display flex
		flex-wrap nowrap
		margin-bottom 30px
		margin-left -10px
		margin-right -10px
		&--video
			padding-top 0
			margin-right 20px
			flex 1
			border-radius 5px
			&_col
				display flex
				flex-wrap nowrap
				justify-content space-between
				width 60.7%
		&--poster
			width 160px
			flex none
			border-radius 5px
		&--imgs
			display flex
			flex-wrap wrap
			justify-content flex-start
			margin-left -10px
			margin-right -10px
			margin-top 15px
			&_item
				width 33.333333%
				padding 10px
				.thumbnail
					border-radius 5px
					padding-top 100%
					width 100%
					display block
			&_col
				width 39.3%
				display flex
				flex-direction column
				justify-content space-between
				margin-bottom -10px
		&--col
			padding-left 10px
			padding-right 10px
			
			
		.popup__title
			margin-bottom 6px
			max-width 230px
			
		.game__category
			font-size 22px
			margin-bottom 0
			
			
	&__info
		margin-top 50px

.catalog-categories
	padding-left 95px
	padding-right 95px
	position relative
	.btn-arrow-simple
		position absolute
		vertical-center()
		&__prev
			left 0
		&__next
			right 0
	
.catalog-category
	&__title
		padding 14px 40px
		text-align center
		font 24px $MBold
		color $secondary-color
		transition all .17s ease-in-out
		border-radius 10px
		&:hover
			cursor pointer
			background-color $accent-color
			color $basic-white-color
		
	&.is-active
		.catalog-category__title
			background-color $accent-color
			color $basic-white-color
			

// Gallery
.gallery-slider
	position absolute
	top 105px
	bottom 0
	left 0
	right 0
	// z-index 1
	pointer-events none
	
	&-thumbnails
		width 840px
		
		.slick-slide
			padding-right 20px
			
	&-controls
		width 190px
		display flex
		flex-wrap nowrap
		justify-content space-between
		margin-bottom 20px
	
.gallery-slide
	display block
