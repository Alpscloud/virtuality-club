.slider
	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
			
.swiper-container
	*
		box-sizing border-box
		
.slider-controls
	white-space nowrap
	font-size 0
	width 160px
	display flex
	justify-content space-between
	flex-wrap nowrap
	height 65px
	
	.btn-arrow
		width 65px
		height 	65px
		svg
			width 12px
			height 20px
		
// Includes slider
.includes-slider
	position relative
	z-index 2
	//width calc(100% + 1920px)
	min-width 0
	padding-left 30px
	padding-bottom 100px
	margin-right 	-130px
	
	.slider-controls
		position absolute	
		left 30px
		bottom 65px
		z-index 1
	
	&:before
		pseudo()
		position absolute
		bottom 0
		left 0
		height 235px
		width 100%
		background-color $color-bg
		border-radius 20px 20px 0 0
	.swiper-slide
		width 320px
	
		padding-top 80px
		&-active
			.include-slide
				transform translateY(-50px)
				&__img
					&:before,
					p
						opacity 1
					
	
		
.include-slide
	will-change transform
	transition transform .23s ease-in-out
	&__title
		font 20px $MBold
		line-height 21px
	&__img
		border-radius 5px
		margin-bottom 15px
		padding-top 138%
		&:before
			pseudo()
			fullSize()
			position absolute
			transition opacity .17s ease-in-out
			background-color rgba($secondary-color, .7)
			z-index 1
			opacity 0
		p
			position absolute
			fullSize()
			padding 45px 15px
			color $alternate-light-text-color
			z-index 2
			font 24px $MReg
			line-height 46px
			transition opacity .17s ease-in-out
			opacity 0
			
// top games
.top-games__slider
	position relative
	padding-left 110px
	padding-right 110px
	margin-top 55px
	
	.swiper-slide
		height auto
	
.top-game
	border 1px solid $accent-color
	border-radius 10px
	padding 15px
	height 100%
	color $secondary-color
	min-height 540px
	&__inner
		background-color $color-bg
		border-radius 10px
		overflow hidden
		display flex
		flex-wrap nowrap
		height 100%
		
	&__poster
		width 57.3%
		position relative
		display block
		img
			display block
			position absolute
			position-center()
			width 100%
			height 100%
			object-fit cover
			
		&.has-trailer
			&:before
				z-index 1
				pseudo()
				position absolute
				position-center()
				width 69px
				height 69px
				background url('../img/icons/svg/play-blue.svg') 50% no-repeat / contain
		
	&__content
		width 42.7%
		padding 25px 20px
		
	&__title
		font 30px $MReg
		
		line-height 32px
		text-transform uppercase
		margin-bottom 20px
		
	&__category
		font 22px $Bold
		line-height 26px
		margin-bottom 20px
		text-transform uppercase
		
	&__description
		font-size 14px
		line-height 17px
		margin-bottom 13px
		p
			margin-bottom 10px
			&:last-child
				margin-bottom 0
				
	&__btn
		display flex
		flex-wrap nowrap
		justify-content space-between
		align-items center
		
	&__params
		display flex
		justify-content space-between
		flex-wrap nowrap
		margin-bottom 20px
		
	
				
	.permalink
		margin-bottom 38px