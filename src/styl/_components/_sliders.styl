		border-radius 5px
		
		padding-top 66%
		

// Stocks
.stocks-slider
	.slick-slide
		margin-right 30px
		> div
			margin-bottom 30px
			&:last-child
				margin-bottom 0
				
// Sertificates
.sertificates-slider
	margin-left -130px
	margin-right -130px
	flex 1
	.slick-track,
	.slick-list
		height 100%

	.slick-slide
		width 570px
		padding-left 15px
		padding-right 15px
		> div
			height 100%
			
		&:not(.slick-active)
			.sertificate-slide
				opacity .3
				pointer-events none
		
	.slick-track
		left -235px
		
.sertificate-slide
	height 100%
	display flex !important
	flex-direction column
	transition opacity .17s ease-in-out
	&__img
		flex 1
		padding-top 0
		border-radius 5px 5px 0 0
		&:before
			pseudo()
			fullSize()
			position absolute
			background-color #03255A
			opacity 0
			z-index 1
			transition opacity .17s ease-in-out
		p
			position absolute
			z-index 3
			vertical-center()
			padding 40px
			text-align center
			color $alternate-light-text-color
			font 22px $MReg
			line-height 27px
			transition opacity .17s ease-in-out
			opacity 0
			
	&:hover
		.sertificate-slide__img
			&:before
				opacity 0.7
				
			p
				opacity 1
		
		
			
		
	&__content
		flex none
		background-color $color-bg
		padding 10px 20px 20px
		text-align center
		border-radius 0 0 5px 5px
	&__title
		font 22px $MBold
		line-height 23px
		margin-bottom 23px
		
// Subscription
.subscription-slider
	width 100%
	flex 1
	.slick-track, 
	.slick-list
		height 100%
		
	.slick-list
		margin-left -15px
		margin-right -15px
		
	.slick-slide
		width 570px
		padding-left 15px
		padding-right 15px
		> div
			height 100%

		
	&__wrapper
		flex 1
		display flex
		flex-direction column
		align-items center
		
		.slider-controls
			flex none
			margin-top 15px
			
.subscription-slide
	height 100%
	padding 15px
	position relative
	svg
		display block
		position absolute
		top 0
		left 0
		width 100%
		height 100%
