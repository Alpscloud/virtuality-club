	&__overlay
		color $secondary-color
		&:before
			pseudo()
			position absolute
			bottom 0
			left 0
			width 100%
			height 80px
			background linear-gradient(180deg, rgba(231, 231, 231, 0) 0%, rgba(231, 231, 231, 0.48) 20.83%, rgba(231, 231, 231, 0.64) 43.75%, rgba(231, 231, 231, 0.8) 100%)

.faq-details
	margin -30px
	&__content
		padding 30px
		flex 1
		min-height 300px
	&__img
		width 285px
		flex none
		position relative
		border-radius 0 5px 5px 0
		.btn
			position absolute
			horisontal-center()
			bottom 45px
			z-index 1
			
			
	.popup__title
		text-transform none
	
	.popup__description
		font-size 14px
		line-height 17px
// Feedbacks
.feedback-slide
	width 285px
	height 100%
	display flex !important
	flex-direction column
	&__content
		border-radius 5px
		background-color $color-bg
		margin-top -1px
		position relative
		z-index 1
		padding 20px
		color $secondary-color
		display flex
		flex-direction column
		flex 1
		
	&__author
		display flex
		align-items center
		flex-wrap nowrap
		justify-content space-between
		margin-bottom 10px
		&-information
			display flex
			flex-wrap nowrap
			align-items center
			justify-content flex-start
			&_photo
				display block
				border-radius 50%
				bg(50%, 50%)
				width 45px
				height 45px
				flex none
				margin-right 15px
			&_name
				font 16px $Bold
				
		&-stars
			position relative
			display inline-block
			padding-left 25px
			font 16px $Reg
			&:before
				pseudo()
				position absolute
				vertical-center()
				left 0
				width 21px
				height 21px
				background url('../img/icons/svg/star.svg') 50% no-repeat / contain
		
	&__header
		border-radius 5px 5px 0 0
		display flex
		flex-wrap nowrap
		height 55px
		background-color rgba(#D7EAF3, .5)
		flex none
		
	&__src
		flex-col-center()
		width auto
		background-color #D7EAF3
		padding 10px 40px 10px 20px
		clip-path polygon(0 0, 90% 0%, 100% 100%, 0% 100%)
		
		img
			display block
			@extends .content-img
			
	&__link
		font 14px $Bold
		color $secondary-color
		&:hover
			color $accent-color
		&-wrapper
			flex-col-center()
			flex 1
			text-align center
			
	&__text
		font 14px $Bold
		line-height 17px
		flex 1
	&__gallery
		flex none
		margin-top 10px
		display flex
		flex-wrap wrap
		justify-content flex-start
		margin-left -5px
		margin-right -5px
		&--item
			width 25%
			padding 5px
			&_link
				display block
				border-radius 5px
				width 100%
				padding-top 100%
				
.feedbacks-slider
	.slick-slide
		float none !important
		height auto !important
		padding-left 15px
		padding-right 15px
		> div
			height 100%
	.slick-track
		display flex
		flex-wrap nowrap
		justify-content flex-start
		margin-left -15px
