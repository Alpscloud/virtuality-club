.popup 
	position fixed
	position-center()
	z-index 999
	width 100%
	height 100%
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
		padding 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
		width 100%
		max-width 920px
		display inline-block
		vertical-align middle
		position relative
		white-space normal
		
	&.is-lightmode
		.popup__overflow
			background-color rgba($basic-white-color, $popup-overlay-opacity)
			
	&.is-outer
		.popup-outer
			border-radius 10px
			padding 15px
			border 1px solid $accent-color
			
	&.is-close-offset
		.btn-close-simple
			left 100%
			right auto
			top 0
			bottom 100%
			margin-left 20px
			svg
				stroke $alternate-light-text-color
				&:hover
					stroke $accent-color

.popup
	
	&-inner
		background-color $color-bg
		border-radius 10px
		padding 30px
		position relative
		text-align left
		.btn-close-simple,
		.btn-close
			position absolute
			top 30px
			right 30px
			z-index 1
			

			

.hidden-popup-content
	display none
	visibility hidden
	

.popup__title
	font 30px $MBold
	line-height 32px
	text-transform uppercase
	margin-bottom 20px
			

.popup__description
	font-size 14px
	line-height 17px
	margin-bottom 13px
	p
		margin-bottom 10px
		&:last-child
			margin-bottom 0
			
// order
.order
	&-controls
		white-space nowrap
		text-align center
		margin-bottom 40px
		.btn-tab
			margin-right 10px
			&:last-child
				margin-right 0
				
	&-form
		padding-left 35px
		padding-right 35px
		
		&__services
			max-width 600px
			margin-bottom 40px
			.row
				margin-bottom 40px
				&:last-child
					margin-bottom 0
					
	&-content__block
		display none
		&:first-child
			display block
					

.form-row__col
	width 100%
	max-width 240px

	.form-group
		margin-left 40px
		
.callback-title
	font-size 24px
	margin-bottom 40px
	
.popup-callback
	.btn-close
		top 20px


