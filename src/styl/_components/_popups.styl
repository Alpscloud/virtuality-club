.popup 
	position fixed
	position-center()
	z-index 999
	width 100%
	height 100%
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
		padding 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
		width 100%
		max-width 920px
		display inline-block
		vertical-align middle
		position relative
		white-space normal
		
	&.is-lightmode
		.popup__overflow
			background-color rgba($basic-white-color, $popup-overlay-opacity)
			
	&.is-outer
		.popup-outer
			border-radius 10px
			padding 15px
			border 1px solid $accent-color

.popup
	
	&-inner
		background-color $color-bg
		border-radius 10px
		padding 30px
		position relative
		text-align left
		overflow hidden
		.btn-close-simple
			position absolute
			top 30px
			right 30px
			z-index 1
			

.hidden-popup-content
	display none
	visibility hidden
	

.popup__title
	font 30px $MBold
	line-height 32px
	text-transform uppercase
	margin-bottom 20px
			

.popup__description
	font-size 14px
	line-height 17px
	margin-bottom 13px
	p
		margin-bottom 10px
		&:last-child
			margin-bottom 0
