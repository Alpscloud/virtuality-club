input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)


.search
	&-form
		width 100%
		transition all .17s ease-in-out
		opacity 0
		position relative
		z-index 2
		visibility hidden
		.btn-search
			z-index 4
		&.is-opened
			opacity 1
			visibility visible
		
		
		&__input
			display block
			width 100%
			height 42px
			border-radius 5px
			background-color rgba($accent-color, .08)
			padding 5px 45px 5px 5px
			font 16px $Reg
			border 1px solid transparent
			&:hover,
			&:focus
				border 1px solid $accent-color
		
	&-wrapper
		position relative
		width 100%
		max-width 370px
		display flex
		justify-content flex-end
		overflow hidden


		
		.btn-search
			position absolute
			vertical-center()
			right 10px
			




.form
	&-input
		display block
		width 100%
		padding 10px 15px
		text-align left
		background-color $light-color
		border 2px solid transparent
		font 1em $Reg
		color $text-color
		&:hover,
		&:focus
			border-color $accent-color
		&::-webkit-input-placeholder
			font 1em $Reg
			color $text-color
		&::-moz-placeholder
			font 1em $Reg
			color $text-color
		&:-moz-placeholder
			font 1em $Reg
			color $text-color
		&:-ms-input-placeholder
			font 1em $Reg
			color $text-color
			
		&.is-error
			border-color red
			
	&-group
		position relative
		margin-bottom 10px
		&:last-child
			margin-bottom 0
			
		&__label
			display inline-block
			margin-bottom 5px
			
	&-textarea
		min-height 200px
	



.form
	&-checkbox
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 2px
			width 16px
			height 16px
			border 1px solid $text-color
			background-position 50% 50%
			background-repeat no-repeat
			background-size 12px 12px
			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:before
							background-color $text-color
							background-image url('../img/icons/svg/checkbox-ic.svg')
							
.form
	&-radio
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 50%
			width 16px
			height 16px
			border 1px solid $text-color
		&:after
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 2px
			top 2px
			width 12px
			height 12px
			border-radius 50%
			background-color $text-color
			display none
			

			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:after
							display block


