.services-slider
	height 100%
	margin-left -15px
	margin-right -15px
	&__wrapper
		height 	100%
		position relative	
		.btn-arrow
			position absolute	
			vertical-center()
			z-index 	5
			&__prev
				left -50px
			&__next
				right -50px
	
	.slick-track,
	.slick-list
		height 100%
		display flex !important
		flex-wrap nowrap
		
	.slick-slide
		display block !important
		height auto
		float none !important
		padding-bottom 50px
		padding-left 15px
		padding-right 15px
		> div
			height 100%
			
.service-slide
	position relative
	height 100%
	z-index 1
	
	
	&__img
		position absolute
		top 0
		width 100%
		height 100%
		border-radius 5px
		z-index -1
		&:before
			pseudo()
			width 100%
			height 300px
			position absolute
			top 0
			background linear-gradient(180deg, rgba(3, 37, 90, 0) 0%, rgba(3, 37, 90, 0.6292) 67.19%, rgba(3, 37, 90, 0.8) 100%)
			border-top-left-radius 5px
			border-top-right-radius 5px
			z-index 1
			transform rotate(-180deg)

		&-svg
			display block
			fill $basic-white-color
			position absolute
			z-index 3
			&_left
				left -1px
				vertical-center()
				height 324px
			&_right
				right -1px
				bottom -1px
				//height 490px
				height 60%
				&-tablet
					display none
		
		

		img
			display block
			object-fit cover
			height 100%
			width 100%
			position relative
			
			
			
	.btn
		position absolute
		horisontal-center()
		z-index 2
		bottom -36px
		width 100%
		max-width 290px
		span
			padding 24px 60px
			

.service-slide__content
	position relative
	z-index 5
	padding 40px 60px
	color $alternate-light-text-color
	.title
		margin-bottom 8px
		
.service-slide__text
	font 20px $Bold
	line-height 24px
	
.service-btns
	&__row
		p
			margin-left 20px
	&__nav
		ul
			display flex
			flex-wrap nowrap
		li
			margin-right 10px
			&:last-child
				margin-right 0
				
		a
			width 200px
			height 70px
			color $alternate-light-text-color
			flex-col-center()
			border-radius 5px
			border 2px solid 
			overflow hidden
			position relative
			transform skew(-25deg)
			font 24px $MBold
			white-space nowrap
			span
				display block
				position relative
				z-index 2
				transform skew(25deg)
			&:after
				pseudo()
				position absolute
				width 110%
				height 110%
				background-color $accent-color
				transition opacity .17s ease-in-out
				opacity 0
				z-index 1
			&:before
				pseudo()
				position absolute
				width 110%
				height 110%
				pointer-events none
				background rgba(246, 246, 246, 0.1)
				backdrop-filter blur(15px)
				transition opacity .17s ease-in-out
			&:hover
			
				&:before
					opacity 0
				&:after
					opacity 1
	

// Game formats
.game-formats
	display flex
	height 100%
	flex-direction column
	
	.sect-header
		margin-bottom 30px
		.title
			margin-bottom 0
			margin-right 30px
		.slider-controls
			display flex
			
	&__slider
		flex 1
		margin-left -15px
		margin-right -15px
		
		.slick-track,
		.slick-list
			height 100%
			
		.slick-track
			display flex !important
			flex-wrap nowrap
			
			.slick-slide
				height auto
				float none !important
				padding-left 15px
				padding-right 15px
				
				> div
					height 100%
					


.game-format
	display flex !important
	flex-direction column
	height 100%
	padding-bottom 30px
	&__img
		flex 1
		display flex
		justify-content space-between
		flex-direction column
		align-items center
		position relative
		overflow hidden
		margin-bottom 25px
		padding 35px 40px 25px
		&:before
			pseudo()
			position absolute
			top 0
			left 0
			width 100%
			height 190px
			background linear-gradient(180deg, rgba(3, 37, 90, 0) 0%, rgba(3, 37, 90, 0.7) 30.21%, rgba(3, 37, 90, 0.9) 100%)
			opacity 0.5	
			transform rotate(-180deg)
			z-index 1
			
		.title, div
			position relative
			z-index 2
		
		div
			width 100%
			

	&__info
		display flex
		margin-left -5px
		margin-right -5px
		justify-content center
		&-item
			font-size 14px
			line-height 17px
			&--ic
				display block
				margin 0 auto 15px auto
				width 50px
				height 50px
				background-repeat no-repeat
				background-size contain
				background-position 50%
			&--wrapper
				width 33.3333%
				padding-left 5px
				padding-right 5px
				

// Celebration
.celebration
	height 100%
	&__row
		height 100%
	&-img
		flex 1
		padding-top 0
		overflow hidden
		&:before
			pseudo()
			position absolute
			bottom 0
			z-index 1
			left 0
			width 100%
			height 40%
			opacity .5
			background linear-gradient(180deg, rgba(3, 37, 90, 0) 0%, rgba(3, 37, 90, 0.7) 30.21%, rgba(3, 37, 90, 0.9) 100%)
		
		.video-link
			position absolute
			bottom 30px
			left 60px
			z-index 2
			
		&__svg
			display block
			position absolute
			z-index 2
			bottom -1px
			fill $basic-white-color
			&-left
				left -1px
				height 83px
				&-tablet
					display none
					height 200px
					vertical-center()
					left -1px
					z-index 2
			&-right
				right -1px
				height 214px
				&-tablet
					display none
					height 200px
					vertical-center()
					right -1px
					z-index 2
				
	&-content
		width 400px
		padding-left 30px
		display flex
		flex-direction column
		justify-content space-between
		&__bottom
			margin-left -40px
			position relative
			z-index 3
			margin-top 85px
			display flex
			flex-wrap nowrap
			
			
		.title
			margin-bottom 10px
			
		p
			margin-bottom 35px
			
		&__link
			flex-col-center()
			border-radius 5px
			overflow hidden
			color #F6F6F6
			height 130px
			text-align center
			padding 15px
			font 22px $Bold
			position relative
			span
				display block
				position relative
				z-index 2
			
			&:before
				pseudo()
				position absolute
				fullSize()
				background-color rgba($secondary-color, .5)
				transition background-color .17s ease-in-out
				
			&--wrapper
				margin-right 30px
				&:last-child
					margin-right 0
					
			&:hover
				&:before
					background-color rgba($secondary-color, .75)
					

// Education
.education
	max-width 1060px
	margin 70px auto 0
	&-img
		position relative
		background linear-gradient(116.86deg, rgba(#B7DAEC, .5) 2.59%, rgba(#0095D9, .5) 91.49%)
		width 57%
		min-height 520px
	
		&__main
			display block
			position absolute
			bottom 0
			width 495px
			right 0
			z-index 1
			
		&__decor
			display block
			width auto
			position absolute
			z-index 1
			
			&-1
				top 100px
				left 50px
				animation flying 7s ease-in-out infinite forwards
			&-2
				top 50px
				right 80px
				z-index 0
				animation flying 4s ease-in-out infinite forwards
			&-3
				right 50px
				bottom 100px
				animation flying 5s ease-in-out infinite forwards
			&-4
				left 130px
				bottom -10px
				animation flying 4s ease-in-out infinite forwards
			
		&__svg
			display block
			position absolute
			height 354px
			fill $basic-white-color
			&-left
				left -1px
				bottom -1px
			&-right
				right -1px
				top -1px
			
	&-content
		width 43%
		padding-left 20px
		
	&-controls
		margin-bottom 50px
		display flex
		flex-wrap nowrap
		
		&__btn
			text-align center
			width 160px
			height 57px
			border 1px solid $accent-color
			border-radius 5px
			font 20px $MReg
			color $accent-color
			transform skew(-25deg)
			margin 0 10px 10px 0
			&:last-child
				margin-right 0
			&:hover,
			&.is-active
				color $basic-white-color
				background-color $accent-color
				
			span
				display block
				transform skew(25deg)
				

		
	&-course
		font-size 20px
		line-height 24px
		display none
		&:first-child
			display block
		.permalink
			font-size 20px
		p
			margin-bottom 10px
			
		.btn-wrapper
			margin-top 70px
			
@keyframes flying
	0%
		transform translate(0, -10px)
	50%
		transform translate(0, 10px)
	100%
		transform translate(0, 0px)
		

// rent
.sect__rent
	background-color #05091D
	.title
		color $light-accent-color
		margin-bottom 0
		
	.sect-header
		.slider-controls
			margin-left 	80px
			display flex
			
	.container
		display 	flex
		flex-direction column
		

.rent-slide
	position relative	
	overflow hidden
	height 100%
	
	
		
	&__content
		position relative	
		z-index 	1
		height 	100%
		display flex
		flex-direction column
		justify-content space-between
		padding 35px 20px 25px
		color $alternate-light-text-color
		backface-visibility hidden
		.title
			color inherit
			margin-bottom 25px
			position relative
			z-index 2
		
		p
			opacity 0
			transition all .17s ease-in-out
			margin-top 	15px
			
			position relative
			z-index 2
			margin-bottom 25px
			
		div
			position relative
			z-index 2
			
		&:before
			pseudo()
			transition all .17s ease-in-out
			fullSize()
			background-color rgba($secondary-color, .7)
			opacity 0
			position absolute	
		&:hover
			&:before
				opacity 1
			p
				margin-top 0
				opacity 1
				
.rent-slide-custom
	height 100%
	.rent-slide__content
		height 100%
		position relative
		padding 35px 20px
		&:before
			opacity .5
			background linear-gradient(180deg, rgba(3, 37, 90, 0) 0%, rgba(3, 37, 90, 0.7) 55.73%, rgba(3, 37, 90, 0.9) 100%)
			
		.btn
			position absolute
			position-center()
			z-index 2
			opacity 0
			
.rent-slide-information
	
	padding-left 65px
	padding-right 65px
	display block
	color $alternate-light-text-color
	font-size 20px
	line-height 24px

	&__content
		min-height 105px
		flex-wrap nowrap
	p
		max-width 350px
	
	&__gallery
		margin-left -10px
		margin-right -10px
		display flex
		flex-wrap nowrap
		width 100%
		max-width 610px
		margin-right 25px
		
		
		&--item
			width 33.3333%
			padding-left 10px
			padding-right 10px
			&_link
				display block
				border-radius 5px
				width 100%
				padding-top 56.26%
				&:hover
					opacity .75
	
	
.rent-slider-custom__svg
	pointer-events none
	position absolute
	display block
	fill #05091D
	vertical-center()
	z-index 3
	height 324px
	&-left
		left -1px
	&-right
		right -1px
		
