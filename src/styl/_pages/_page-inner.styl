.promo-inner
	height 100%
	padding-bottom 50px
	padding-top 2.5%
	&__content
		width 460px
		flex none
		height 100%
		display flex
		flex-direction column
		align-items  center
		justify-content space-between

	&__row
		height 100%
	&__link
		display block
		width 190px
		height 195px
		position relative
		backface-visibility hidden
		&:hover
			transform scale(1.05, 1.05)
		&:before
			pseudo()
			position absolute
			fullSize()
			z-index 1
			background url('../img/decor/disc.svg') 50% 50% no-repeat / contain
		&--img
			display block
			position absolute
			position-center()
			width 178px
			height 178px
			mask-image url('../img/decor/disc-mask.svg')
			mask-size cover
			mask-repeat no-repeat
			
		img
			display block
			width 100%
			height 100%
			object-fit cover
			
	&__subtitle
		margin-bottom 50px
		font 20px $Reg
		line-height 24px
		
	&__title
		font 44px $MReg
		margin-bottom 15px
		position relative
		z-index 1
		&-stroke
			max-width 380px
			&:before
				content attr(data-title)
				position absolute
				top 5px
				left 5px
				color transparent
				z-index -1
				text-stroke 1px solid #B9DEEF
				-webkit-text-stroke 1px  #B9DEEF
				opacity .5
			
// Arcades
.page-arcades
	.promo-inner
		&__label
			order 1
		&__content
			order 2
			
.sect__benefits
	padding-bottom 50px
	
.benefits
	position relative
	height 380px
	
	&:before
		pseudo()
		position absolute
		top 90px
		bottom 90px
		left 130px
		right 130px
		border 1px solid $accent-color
		
	&__row
		margin-bottom -35px
	
	&-wrapper
		padding-left 90px
	&-description
		margin-bottom 25px
		p
			width 100%
			margin-right 20px
			max-width 650px
			font 20px $Reg
			line-height 24px
			
.benefit
	position relative
	z-index 1
	width 255px
	height 170px
	padding 20px
	font 18px $Bold
	line-height 21px
	text-align center
	flex-col-center()
	
	&:before
		pseudo()
		position absolute
		fullSize()
		background-position 50%
		background-size contain
		background-repeat no-repeat
		z-index -1
	&.top-left-bg
		&:before
			background-image url('../img/decor/benefits/top-left-card.svg')
	&.top-right-bg
		&:before
			background-image url('../img/decor/benefits/top-left-card.svg')
			transform scaleX(-1)
	&.center-bg
		&:before
			background-image url('../img/decor/benefits/center-card.svg')
	&.bottom-left-bg
		&:before
			background-image url('../img/decor/benefits/top-left-card.svg')
			transform rotateX(-180deg)
	&.bottom-right-bg
		&:before
			background-image url('../img/decor/benefits/top-left-card.svg')
			transform rotateX(-180deg) scaleX(-1)
	
	&__ic
		display block
		margin 0 auto 20px auto
		width 50px
		height 50px
		background-position 50%
		background-repeat no-repeat
		background-size contain
	&__wrapper
		width 33.33333%
		margin-bottom 35px
		&:nth-child(3n+2)
			.benefit
				margin 0 auto
				
		&:nth-child(3n+3)
			display flex
			justify-content flex-end
			
			
	
.benefits-slider
	margin-bottom 30px
	position relative
	// &:before
	// 	pseudo()
	// 	position absolute
	// 	z-index 1
	// 	top 0
	// 	left 0
	// 	width 0
	// 	height 0
	// 	border-style solid
	// 	border-width 30px 30px 0 0
	// 	border-color $body-bg transparent transparent transparent
	.slick-slide
		margin-right 30px
		
	.slick-current
		.benefit-slide
			
			mask-image url('../img/decor/benefits/mask.svg')
			mask-size cover
			mask-repeat no-repeat
			
.benefit-slide
	width 100%
	padding-top 67%
	border-radius 5px
	transition all .2s ease-in-out
	
// calc
.sect__calculator
	padding-bottom 50px
	
	.title
		margin-bottom 40px
	
.tab-block
	max-width 1110px
	width 100%
	margin 0 auto
	

.tab-controls
	padding 25px 50px
	margin-bottom 14px
	&__devices
		display none
	&__row
		margin-left -30px
		margin-right -30px
		
	&__item
		padding-left 30px
		padding-right 30px
		border-right 1px solid rgba($accent-color, .2)
		&:last-child
			border-right none
	
	&__btn
		flex-col-center()
		height 68px
		width 150px
		border 1px solid $accent-color
		@extends .b-radius-5
		font 20px $MBold
		line-height 21px
		color $text-color
		position relative
		border-color transparent
		&:before,
		&:after
			pseudo()
			pointer-events none
			z-index 1
			position absolute
			transition all .23s ease-in-out
			//opacity 0
		&:before
			top -1px
			bottom -1px
			left 15px
			right 15px
			border-top 1px solid $color-bg
			border-bottom 1px solid $color-bg
		&:after
			top 10px
			bottom 10px
			left -1px
			right -1px
			border-left 1px solid $color-bg
			border-right 1px solid $color-bg

		&.is-active
			color $accent-color
			border-color $accent-color
		&:hover
			border-color $accent-color
			
.tab-content-item
	&__body
		margin-bottom 14px
		padding 25px 75px 40px
		//min-height 330px
	&__footer
		min-height 140px
		padding 35px 75px
		display flex
		align-items center
		

.calculator-form
	.form-label__full
		margin-bottom 15px
		
	&__row
		margin-bottom 65px
		&:last-child
			margin-bottom 0
	&__col
		
		&:first-child
			width 100%
			max-width 620px
		&:last-child
			width 335px
			flex none
			
	.form-range__row
		margin-bottom 45px
		&:last-child
			margin-bottom 0
			
.calculator-form-results
	&__row
		width 100%
	&__col
		width 240px
		
	&__total
		flex 1
		text-align center
		width auto
		max-width none
		display flex
		align-items flex-end
		justify-content center
		flex-wrap nowrap
		font 18px $Bold
		&-label
			display inline-block
			padding-bottom 5px
		&-price
			font 48px $MBold
			white-space nowrap
			margin-left 30px
			line-height 1
			span
				font-size 0.5em


.form-date__group
	margin-bottom 40px
	
.form-range__column
	flex-direction column
	justify-content space-between
	
.calculator-form__col.column
	padding-top 25px
	
.calculator-form__col-full
	width 100% !important
	max-width 100% !important

// format
.sect__formats
	padding-bottom 50px
	
	.sect-header
		.title
			margin-bottom 0


.format
	border 1px solid $accent-color
	border-radius 10px
	padding 15px
	height 100%
	position relative
	transition opacity .17s ease-in-out
	min-height 540px
	display flex !important
	&-inner
		background-color #032B4B
		border-radius 5px
		display flex
		flex-wrap nowrap
		flex 1
	&-img
		width 60%
		padding-top 0
	&-labels
		
		&__wrapper
			position absolute
			horisontal-center()
			width 100%
			padding-left 30px
			padding-right 30px
			z-index 1
			bottom 10px
			.btn-arrow-simple
				position absolute	
				vertical-center()
				&__prev
					left 10px
				&__next
					right 10px
					
				svg
					fill $secondary-color
				&:hover
					svg
						fill $accent-color
						
	&-label
		position relative
		font-size 12px
		line-height 14px
		//width 106px
		height 120px
		text-align center
		padding 15px 8px
		margin-right 10px
		color $light-accent-color
		&__wrapper
			padding-left 5px
			padding-right 5px
			padding-bottom 10px
		&:last-child
			margin-right 0
		span
			display block
		img
			display block
			margin 0 auto 15px auto
			width auto
			height 55px
			max-width 90px
			position relative
			transform none
			top auto
			left auto
		&:before
			pseudo()
			position absolute
			fullSize()
			border-radius 10px
			background rgba(3, 21, 47, 0.8)
			backdrop-filter blur(10px)
			z-index -1
			
	&-content
		width 40%
		padding 25px 40px
		display flex
		flex-direction column
		justify-content space-between
		color $light-accent-color
		font-size 14px
		line-height 17px
		p
			margin-bottom 25px
			
	&-characteristics
		margin-bottom 15px
		li
			display block
			position relative
			padding-left 27px
			margin-bottom 10px
			
			&:before
				pseudo()
				position absolute
				vertical-center()
				left 0
				width 10px
				height 10px
				border 1px solid currentColor
				border-radius 2px
		
	&-title
		text-transform uppercase
		font 30px $MBold
		margin-bottom 10px


