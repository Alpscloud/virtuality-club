.section-content
	height 100%
	padding-top 105px
	
.fp-tableCell
	display block !important


		
.promo-slider
	height 100%
	
.promo-slide
	position relative
	padding-top 165px
	height 100vh
	
	.container
		position relative
		height 100%
	

	.btn-arrow
		vertical-center()
		right 130px
		z-index 3
		position absolute	

	&__content
		position relative
		z-index 2
		
	&__text
		position relative
		
		.subtitle
			margin-top 15px
			
	.video-link
		margin-top 40px
		
	&__row
		&.align-horisontal-between
			.promo-slide__text
				order 2
				text-align right
				max-width 420px
			.video-link
				margin-top 0
				order 1
		
	&__img
		position absolute
		horisontal-center()
		top 0
		bottom 0
		width 100%
		
		img
			display block
			width auto
			height 100%
			position relative
			horisontal-center()
			
		
		.btn
			position absolute
			z-index 5
			bottom 6%
			left 130px
			
		.decor-circles
			z-index -1
			top 0
			horisontal-center()
			
			
	&__right-offset
		.promo-slide__img
			margin-left 100px
			
		.video-link
			margin-left 70px
			
		.btn
			margin-left -100px
			bottom 12%

.decor-circles
	display block
	width 530px
	height 530px
	background url('../img/decor/promo/figure.svg') no-repeat 50% / contain
	position absolute
	animation rotate-center 25s linear infinite forwards
				
@keyframes rotate-center
	to
		transform translateX(-50%) rotate(-360deg)
		
// Advantages
.full-height
	height calc(100vh - 105px)
	
.advantages
	&-content
		flex 1
		padding-top 75px
		padding-right 30px
		&__text
			max-width 700px
		
	&-text
		//width 575px
		width 1100px
		flex none
		background-position left center
		display flex
		align-items flex-end
		padding 0 95px 140px
		font 20px $Bold
		line-height 24px
		color #F4F2F5
		position relative
		svg
			display block
			position absolute
			width 53px
			height 100%
			top 0
			left -10px
			stroke $accent-color
			fill none
		// &:before
		// 	pseudo()
		// 	position absolute
		// 	top 0
		// 	bottom 0
		// 	width 53px
		// 	background url('../img/decor/advantages-decor.svg') 50% no-repeat / 100% auto
		// 	left -10px
		
	&-wrapper
		.container
			padding-right 0
			

.advantages-items
	position relative
	width 610px
	height 500px
	
.advantage-item
	position absolute
	font 14px $Bold
	line-height 17px
	width 200px
	height 200px
	flex-col-center()
	&__inner
		width 82.5%
		height 82.5%
	&:nth-child(1)
		left 0
		top 100px
		width 160px
		height 160px
		.advantage-item__ic
			width 40px
			height 40px
			
	&:nth-child(2)
		right 0
		top 50px
	&:nth-child(3)
		top 150px
		right 190px
		
	&:nth-child(4)
		bottom 0
		left 0
	&:nth-child(5)
		right 0
		bottom 40px
		
	p
		max-width 120px
		
	&__ic
		background-position 50%
		background-repeat no-repeat
		background-size contain
		width 55px
		height 55px
		margin-bottom 10px
	&__inner
		border-radius 50%
		overflow hidden
		flex-col-center()
		position relative
		width 165px
		height 165px
		&:after
			pseudo()
			position absolute
			position-center()
			width 100%
			height 100%
			background-repeat no-repeat
			background-size contain
			background-position 50%
			animation rotate 20s linear infinite forwards
			
		&:before
			pseudo()
			position absolute
			fullSize()
			background-color rgba(5, 9, 30, 0.3)
			filter blur(1px)
	

// Sect includes
.includes-wrapper
	position relative
	display flex
	flex-direction column
	.title
		flex none
	
.includes
	&__row
		width 100%
		flex 1
		height 100%
		//padding-left 130px
		padding-right 130px
		z-index 1
	&-img
		flex none
		//max-width 505px
		height 100%
		//max-height 744px
		display flex
		align-items flex-end
		position relative	
		
		.decor-circles
			position absolute	
			z-index -1
			top -100px
			right -240px
		img
			display block
			height 100%
			width auto
			//max-width 505px
			//max-height 744px
			
// How to play

.how-to-play
	display flex
	flex-direction column
	height 100%
	&__imgs
		position relative
		width 100%
		max-width 1100px
		margin 40px auto 0
		flex 1
		padding-bottom 50px
		
	&__scheme
		height 577px
		width 577px
		display block
		position relative
		.btn-skew
			position absolute
			bottom -35px
			left 152px
		img
			width auto
			height 100%
			display block

	&__dude
		position absolute
		top 0
		height 100%
		left 577px
		img
			display block
			width auto
			height 100%
		

// top games
.top-games__wrapper
	display flex
	flex-direction column
	padding-bottom 50px
	

	.top-games__slider
		flex 1
		
		
		.top-game
			height 100%
			
// catalog
.catalog
	display flex
	flex-direction column
	padding-top 55px
	
	&-games
		flex 1
		padding-bottom 50px
		
	
		
	&-categories
		flex none
		margin-bottom 15px


// Gallery
.sect__gallery
	position relative
	&:before
		pseudo()
		position absolute
		z-index 2
		bottom 0
		left 0
		width 100%
		height 300px
		background linear-gradient(180deg, rgba(3, 37, 90, 0) 0%, rgba(3, 37, 90, 0.8) 100%)
	&:after
		pseudo()
		position absolute
		bottom 0
		top 105px
		width 80px
		background-color rgba(#04122A,.8)
		z-index 3
		left 0
	.container
		padding-bottom 5%
		position relative
		z-index 4
		
	.video-link
		flex none
		
		
.gallery-btn
	flex 1
	margin-left 145px
	margin-right 145px
		
.gallery__row
	width 100%
	
// Stock
.sect__stocks
	.title
		margin-bottom 40px
		
.stock
	margin-bottom 30px
	border-radius 5px
	padding 30px
	min-height 180px
	display flex !important
	align-items center
	&__row
		width 100%
	&__title
		width 220px
		text-align center
		color $secondary-color
		font 27px $MBold
	&-content
		flex 1
		padding-left 40px
		position relative
		&:before
			pseudo()
			position absolute
			vertical-center()
			left 0
			height 100px
			width 2px
			background-color rgba($secondary-color, .1)
			
		&__text
			margin-right 30px
			color $secondary-color
			font 14px $Bold
			line-height 17px
			max-width 240px
			p
				margin-bottom 10px
			
	&-discount
		display inline-block
		margin-right 20px
		color $accent-color
		font 36px $MBold
	&:last-child
		margin-bottom 0
		
	&-details
		&__gallery
			margin-left -10px
			margin-right -10px
			margin-bottom 30px
			display flex
			flex-wrap wrap
			justify-content flex-start
			&--item
				width 25%
				padding 0 10px 10px
				.thumbnail
					border-radius 5px
					display block
					width 100%
					padding-top 65%
		
// Sertificates
.sertificates
	padding-bottom 50px
	height 100%
	display flex
	flex-direction column
	
	&__header
		font 18px $Bold
		line-height 21px
		margin-bottom 35px
		flex none
		
		.title
			margin-bottom 20px
			
// Subscr
.sect__subscription
	.title
		margin-bottom 20px
		flex 0
		
.subscription
	padding-bottom 50px
	display flex
	flex-direction column
	height 100%

// simple sections

	
.simple-sections
	height auto 
	
	section
		overflow visible
		

		
	.title
		margin-bottom 15px
	



			
